<div class="container">
  <div class="row justify-content-center m-3">
    <h3>新規会員登録</h3>

    <div class="container">
      <div class="row justify-content-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
            <table class="table table-borderless mt-3">
              <tr>
                <td><%= f.label :名前 %></td>
                <td><%= f.text_field :name %></td>
                </td>
              </tr>
              <tr>
                <td><%= f.label :性別 %></td>
                <td>
                <%= f.radio_button :sex, :male, checked: true %>男性
                <%= f.radio_button :sex, :female %>女性
                </td>
              <tr>
                <td><%= f.label :お住いの住所 %></td>
                <td><%= f.text_field :prefectures, placeholder: "東京都" %></td>
              </tr>
              <tr>
                <td><%= f.label :メールアドレス %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
                <tr>
                  <td>パスワード(６文字以上)</td>
                    <% if @minimum_password_length %>
                      <% @minimum_password_length %>
                    <% end %>
                  </td>
                  <td><%= f.password_field :password, autocomplete: "new-password" %></td>
                </tr>
                <tr>
                  <td><%= f.label :パスワード確認用 %></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
                </tr>
                <tr>
             </table>

              <div class="actions text-center m-5">
                <%= f.submit "新規会員登録", class: "button btn btn-success btn-lg center-block" %>
              </div>
              <%#= render "public/shared/links" %>
        <% end %>

      </div>
    </div>
  </div>
</div>