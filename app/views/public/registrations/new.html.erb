<div class="container">
  <div class="row m-3">
    <h3>新規会員登録</h3>

    <div class="container">
      <div class="row justify-content-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
            <table class="table table-borderless mt-3">
              <tr>
                <td><%= f.label :名前 %></td>
                <td><%= f.text_field :name, required: true, autofocus: true %></td>
              </tr>
              <tr>
                <td><%= f.label :性別 %></td>
                <td>
                  <%= f.radio_button :sex, :male, checked: true %>男性<span>　　</span>
                  <%= f.radio_button :sex, :female %>女性
                </td>
              </tr>
              <tr>
                <td><%= f.label :お住いの都道府県 %></td>
                <td><%= f.text_field :prefectures, placeholder: "東京都", required: true %></td>
              </tr>
              <tr>
                <td><%= f.label :メールアドレス %></td>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %></td>
              </tr>
                <tr>
                  <td>パスワード(６文字以上)</td>
                    <% if @minimum_password_length %>
                      <% @minimum_password_length %>
                    <% end %>
                  </td>
                  <td><%= f.password_field :password, autocomplete: "new-password", required: true %></td>
                </tr>
                <tr>
                  <td><%= f.label :パスワード確認用 %></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %></td>
                </tr>
                <tr>
             </table>

            <div class="row justify-content-center mt-3">
              <table class="table table-borderless">
                  <h5>ご本人様確認</h5>
                <tr>
                  <td><%= f.label :ご身分証の写真 %></td>
                  <td><%= f.file_field :image, accept: "image/*", class: "form-control-file", required: true %></td>
                  <td></td>
                </tr>
                <tr>
                  <td><%= f.label :本名 %></td>
                  <td><%= f.text_field :real_name, class: "form-control", required: true %></td>
                  <td></td>
                </tr>
                <tr>
                  <td><%= f.label :電話番号%></td>
                  <td><%= f.text_field :phone_number, class: "form-control", required: true %></td>
                  <td></td>
                </tr>
                <tr>
                  <td><%= f.label :住所 %></td>
                  <td><%= f.text_field :address, class: "form-control", required: true %></td>
                </tr>
              </table>
            </div>

              <div class="actions text-center m-5">
                <%= f.submit "新規会員登録", class: "button btn btn-success btn-lg center-block" %>
              </div>
              <%#= render "public/shared/links" %>
        <% end %>

      </div>
    </div>
  </div>
</div>