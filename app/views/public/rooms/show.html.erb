<div class="container">
  <div class="row">
    <div class="col my-3">
      <h3>トークルーム</h3>

      <ul class="list-group" style="margin-top: 20px;" id="js-messages">
        <%= render partial: "public/messages/message", collection: @messages, as: :m %>
      </ul>

      <%= form_with model: @message, url: messages_path, local: false do |f| %>
        <%= f.text_field :body, placeholder: "メッセージを入力して下さい", size: 100 %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= hidden_field_tag :page, params[:page] %>
        <br>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
  <div class="d-flex justify-content-center" id="js-messages-paginate">
    <%= paginate @messages %>
  </div>
</div>