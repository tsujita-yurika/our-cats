<div class="container">
  <div class="row">
    <h3>会員編集</h3>

  <div class="container">
    <div class="row justify-content-center">
      <%= form_with model: @member, url: member_path(@member.id), method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :写真 %></td>
            <td><%= f.file_field :image, accept: "image/*", class: "form-control-file" %></td>
            <td></td>
          </tr>

          <tr>
            <td><%= f.label :年齢 %></td>
            <td><%= f.text_field :age, class: "form-control" %></td>
            <td></td>
          </tr>

        <div class="actions text-center m-5">
          <%= f.submit '保存', class: "button btn btn-success btn-lg center-block" %>
        </div>
      <% end %>

  </div>
</div>