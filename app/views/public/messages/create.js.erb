<!--非同期化通信each文の中にrenderの代わりにcollectionを使用-->
$("#js-messages").html("<%= j(render partial: "public/messages/message", collection: @messages, as: :m) %>")
<!--入力フォームの内容をリセット-->
$('.js-form')[0].reset();
<!--ページも非同期化通信-->
$("#js-messages-paginate").html("<%= j(paginate @messages, params: { controller: 'public/rooms', action: 'show', id: @room.id, page: params[:page] }) %>")
<!--一度空送信してエラー文が表示された後、ちゃんと入力して送信してもエラー文が表示されたままでは困るので、エラー文を空にする-->
$('.error-alert').empty();