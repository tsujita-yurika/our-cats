<div class="container">
  <div class="row justify-content-center my-4">
    <h3>お世話依頼編集</h3>

    <div class="container">
      <div class="row row justify-content-center">
        <%= form_with model: @request, url: request_path(@request.id), method: :patch do |f| %>
          <table class="table table-borderless">
            <tr>
              <td><%= f.label :お世話してもらう猫 %></td>
                <table class="table table-borderless my-2"><tr>
                <%= f.collection_check_boxes :cat_ids, @my_cats, :id, :name, checked: @my_cats.ids, multiple: true do |b| %>
                     <td>
                      <%= b.label do %>
                      <table>
                        <tr><td><%= b.check_box %>
                        <%= image_tag b.object.image, size:"80x80" %></tr></td>
                        <tr><td><%= b.object.name %></tr></td>
                      </table>
                      <% end %>
                      </td>
                    <% end %>
                    </tr>
                </table>
            </tr>
          </table>
          <table class="table table-borderless my-2">
            <tr>
              <td align="right"><%= f.label :時期 %></td>
              <td><%= f.text_field :season, class: "form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <td align="right"><%= f.label :日数 %></td>
              <td><%= f.text_field :days, class: "form-control" %></td>
              <td></td>
            </tr>
            <tr>
              <td align="right">場所</td>
              <td><%= f.radio_button :location, :home, checked: true %>自宅に来てもらう
              <%= f.radio_button :location, :deposit %>相手に預かって貰う
              </td>
            </tr>
            <tr>
              <td align="right"><%= f.label :備考 %></td>
              <td><%= f.text_area :memo, class: "form-control", rows:5 %></td>
              <td></td>
            </tr>
          </table>
          <div class="actions text-center m-5">
            <%= f.submit '保存', class: "button btn btn-success btn-lg center-block" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>