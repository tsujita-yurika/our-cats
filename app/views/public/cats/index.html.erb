<div class="container">
  <div class="row mt-3">
    <h3>猫一覧（全<%= @cat_count %>件）</h3>
  </div>

        <div class="row m-xl-2">
          <% @cats.each do |cat| %>
            <div class="col-3 p-xl-2 mb-3">
              <div>
                <%= link_to cat_path(cat.id) do %>
                  <%= image_tag cat.get_image, size: "230x180" %>
                <% end %>
              </div>
              <div><%= cat.name %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <%= paginate @cats %>
    </div>
</div>