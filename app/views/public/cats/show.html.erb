<div class="container">
  <div class="row justify-content-center m-2 ">
    <h3>猫の詳細</h3>

    <div class="col-5 p-5">
      <table class="table table-borderless">
        <%= image_tag @cat.get_image, size:"150x150" %>
        <tr>
          <td>お名前</td>
          <td><%= @cat.name %></td>
        </tr>
        <tr>
          <td>性別</td>
          <td>
          <% if @cat.sex == 'female' %>
            ♀
          <% else %>
            ♂
          <% end %>
          </td>
        </tr>
        <tr>
          <td>年齢</td>
          <td><%= @cat.age %></td>
        </tr>
        <tr>
          <td>種類</td>
          <td><%= @cat.category.name %></td>
        </tr>
        <tr>
          <td>猫の紹介</td>
          <td><%= @cat.introduction %></td>
        </tr>
        <tr>
          <% if current_member && current_member.cat_ids.include?(@cat.id) %>
            <td><%= link_to "編集", edit_cat_path(@cat.id), class: "btn btn-info btn-block" %></td>
            <td><%= link_to "猫ちゃんのデータを削除", cat_path(@cat.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-block" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
