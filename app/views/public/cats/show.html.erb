<div class="container m-3">
  <div class="row ml-4 mt-3">
    <h3>猫の詳細</h3>
  </div>
  <div class="row ml-5">
    <div class="col-2">
      <%= link_to member_path(@cat.member) do %>
        <%= image_tag @cat.member.get_profile_image, size:("80x80") %>
      <% end %>
      <p><%= @cat.member.name%></p>
    </div>

    <div class="row justify-content-end">
      <div class="col-12 ml-5 pl-5">
        <table class="table">
          <%= image_tag @cat.get_image, size:"300x230" %><br><br>
          <tr>
            <th>お名前</th>
            <td><%= @cat.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td>
            <% if @cat.sex == 'female' %>
              ♀
            <% else %>
              ♂
            <% end %>
            </td>
          </tr>
          <tr>
            <th>年齢</th>
            <td><%= @cat.age %></td>
          </tr>
          <tr>
            <th>種類</th>
            <td><%= @cat.category.name %></td>
          </tr>
          <tr>
            <th>猫の紹介</th>
            <td><%= @cat.introduction %></td>
          </tr>
          <tr>
            <% if current_member && current_member.cat_ids.include?(@cat.id) %>
              <td><%= link_to "編集", edit_cat_path(@cat.id), class: "btn btn-info btn-block" %></td>
              <td><%= link_to "猫ちゃんのデータを削除", cat_path(@cat.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-block" %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
