<div class="container">
  <div class="row">
    <div class="col-6">
      <h3><%= @member.name %>さんの会員編集</h3>

      <%= form_with model: @member, url: admin_member_path(@member.id), method: :patch do |f| %>
          <%= render "admin/shared/error_messages", resource: @member %>

      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <td><%= f.label :プロフィール画像 %></td>
          <td><%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %></td>
        </tr>
        <tr>
          <td><%= f.label :名前 %></td>
          <td><%= f.text_field :name, class: "form-control", autofocus: true %></td>
          <td></td>
        </tr>
        <tr>
          <td>性別</td>
          <td>
            <% if @member.sex == 'female' %>
              女性
            <% else %>
              男性
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :お住まいの都道府県 %></td>
          <td><%= f.text_field :prefectures, class: "form-control" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :メールアドレス %></td>
          <td><%= f.email_field :email, autofocus: true, class: "form-control" %></td>
          <td></td>
        </tr>
        <tr>
          <td>本名</td>
          <td><%= @member.real_name %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @member.phone_number %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <td>本人確認</td>
            <td>
              <%= f.radio_button :identification_status, :true %>
              <%= f.label :確認済み %>
              <%= f.radio_button :identification_status, :false %>
              <%= f.label :未登録 %>
            </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :有効 %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :退会 %>
            </td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<% end %>