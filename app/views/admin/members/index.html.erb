<div class="container mt-3">
  <div class="row">
    <div class="col">

      <h3>会員一覧</h3>
      <table class="table table-sm">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>本人確認</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tr>
        <% @members.each do |member| %>
          <td><%= member.id %></td>
          <td><%= link_to member.name, admin_member_path(member) %></td>
          <td><%= member.email %></td>
          <% if member.identification_status == true %>
            <td class="text-success">確認済</td>
          <% else %>
            <td class="text-danger">未確認</td>
          <% end %>
          <% if member.is_active == true %>
            <td class="text-success">有効</td>
          <% else %>
            <td class="text-danger">退会</td>
          <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @members %>
  </div>
</div>