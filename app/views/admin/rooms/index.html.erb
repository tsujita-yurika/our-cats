<div class="container my-3">
  <div class="row">
    <div class="col">
      <h2>Room一覧</h2>
      <div class="row">
        <% @rooms.each_slice(6).each do |room_slice| %>
          <div class="col-4">
            <ul>
              <% room_slice.each do |room| %>
               <hr>
                <li class="d-flex justify-content-between">
                  <%= link_to room.id, admin_room_path(room), style: "font-size: 25px;" %>
                  <a class="btn btn-danger btn-sm mt-3" href="<%= admin_room_path(room) %>" data-confirm="本当に削除しますか？" data-method="delete">削除</a>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-5 mb-2">
    <%= paginate @rooms %>
  </div>
</div>