<div class="container">
  <div class="row mt-3">
    <h3>依頼詳細</h3>
  </div>

  <div class="row">
    <div class="col-2">
      <%= link_to admin_member_path(@request.member) do %>
        <%= image_tag @request.member.get_profile_image, size:("80x80") %>
      <% end %>
      <p><%= @request.member.name%></p>
    </div>

    <div class="col-9">
      <div class="row justify-content-center mt-3">
        <% @my_cats.each do |cat| %>
          <div class="col-3 p-xl-2 mb-3">
             <div><%= image_tag cat.image, size:"200x150" %></div>
             <div><%= cat.name %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class = "row justify-content-center mt-3">
    <div class="col-6">
        <% if @request.is_complete == true %>
          <h2>この依頼は完了しました</h2>
        <% end %>
      <table class="table">
          <tr>
            <th>時期</th>
            <td><%= @request.season %></td>
          </tr>
          <tr>
            <th>日数</th>
            <td><%= @request.days %></td>
          </tr>
          <tr>
            <th>場所</th>
            <td>
            <% if @request.location == 'home' %>
              自宅に来てもらう
            <% else %>
              預かってもらう
            <% end %>
            </td>
          </tr>
          <tr>
            <th>備考</th>
            <td><%= @request.memo %></td>
          </tr>
            <% if @request.is_complete == false %>
              <tr>
                <td><%= link_to "編集", edit_admin_request_path(@request.id), class: "btn btn-info btn-block" %></td>
                <td><%= link_to "完了", admin_request_path(@request.id), method: :delete, "data-confirm" => "本当に完了しますか？", class: "btn btn-danger btn-block" %></td>
              </tr>
            <% end %>
      </table>
      <br>
    </div>
  </div>
</div>
