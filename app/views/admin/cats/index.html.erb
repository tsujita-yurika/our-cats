<div class="container">
  <div class="row justify-content-center m-3">
    <h3>猫一覧</h3>

      <div class="container">
        <div class="row m-xl-4">
          <% @cats.each do |cat| %>
            <div class="col-2">
              <div>
                <%= link_to cat_path(cat.id) do %>
                  <%= image_tag cat.get_image, size: "120x120" %>
                <% end %>
              </div>
              <div><%= cat.name %></div>
            </div>
          <% end %>
        </div>
      </div>
      <%= paginate @cats %>
  </div>
</div>