<div class="row">
  <div class="search_form mb-2 ml-auto">
    <%= form_with(url: search_path, method: "get") do |form| %>
      <div class="input-group">
        <%= form.text_field :search, required: true, class: "form-control", placeholder: "猫の種類で検索" %>
        <div class="input-group-append">
          <%= form.button class: "btn btn", style: "background-color: brown; color: white" do %>
            <i class="fas fa-search"></i> 検索
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>